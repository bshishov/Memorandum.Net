{% if link.Node.Image %}  
<img class="link-image" src="{{link.Node.Image}}" alt="" />
{% elseif link.Node.Extension %}	
<img class="link-image" src="/static/img/file-icons/{{link.Node.Extension}}.png" alt="" /> 
{% else %}
<img class="link-image" src="/static/img/file-icons/_blank.png" alt="" /> 		
{% endif %}

{% if link.Node.Name %}
  <div>{{ link.Node.Name|Truncate:100 }}</div>
{% endif %}
<div>
  <a href="{{ link.Node.Url }}" class="link-title" target="_blank">{{ link.Node.Url|Truncate:100 }}</a>
</div>
